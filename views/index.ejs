
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Personajes de One Piece</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
<div class="container py-4">
    <h1 class="mb-4 text-center">⛵ Personajes de One Piece</h1>
    <a href="/add" class="btn btn-success mb-3">Agregar personaje</a>
    <div class="row">
        <% personajes.forEach(p => { %>
        <div class="col-md-4">
            <div class="card mb-4">
                <img src="<%= p.imagen_url %>" class="card-img-top" alt="imagen de <%= p.nombre %>">
                <div class="card-body">
                    <h5 class="card-title"><%= p.nombre %></h5>
                    <p class="card-text"><strong>Fruta del Diablo:</strong> <%= p.fruta_del_diablo %></p>
                    <p class="card-text"><strong>Recompensa:</strong> <%= p.recompensa %></p>
                    <div class="mb-2">
                        <iframe width="100%" height="200" src="<%= p.video_url %>" frameborder="0" allowfullscreen></iframe>
                    </div>
                    <a href="/edit/<%= p.id %>" class="btn btn-warning btn-sm">Editar</a>
                    <form action="/delete/<%= p.id %>" method="POST" style="display:inline;">
                        <button class="btn btn-danger btn-sm" onclick="return confirm('¿Eliminar este personaje?')">Eliminar</button>
                    </form>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</div>
</body>
</html>
